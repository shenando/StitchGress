<h3>Edit Project</h3>
<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="patternType" name="patternType">
                    {{#select story.patternType}}
                    <option value="free" selected>Free</option>
                    <option value="purchased">Purchased</option>
                    {{/select}}
                </select>
                <label for="patternType">Pattern Type</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="patternLink" name="patternLink" value="{{story.patternLink}}">
                <label for="patternLink">Pattern Link</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us About Your Project:</h5>
                <textarea id="body" name="body">{{story.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
        <div class="row">
            <form action="">
                <input type="file" class="form-control" id="file" name="file">
            </form>
        </div>
    </form>
</div>